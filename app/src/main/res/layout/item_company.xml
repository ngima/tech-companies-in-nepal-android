<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_1"
    android:background="#292929"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_8"
    android:paddingLeft="@dimen/spacing_16"
    android:paddingRight="@dimen/spacing_16"
    android:paddingTop="@dimen/spacing_8">

    <TextView
        android:id="@+id/text_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_18"
        tools:text="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/spacing_16"
            android:layout_height="@dimen/spacing_16"
            android:layout_marginRight="@dimen/spacing_8"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/text_company_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white_50"
            tools:text="@string/app_name" />
    </LinearLayout>
</LinearLayout>